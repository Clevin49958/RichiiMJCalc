// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider = "prisma-zod-generator"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model GameSetting {
  id         Int    @id @default(autoincrement())
  numPlayers Int
  gameMode   String
  gameId     Int    @unique
  game       Game   @relation(fields: [gameId], references: [id])
}

model Game {
  id               Int               @id @default(autoincrement())
  startTime        DateTime?
  endTime          DateTime
  players Player[]
  records          Record[]
  gameSetting      GameSetting?
}

model Player {
  name String @map("playerName")
  score      Int
  gameId     Int
  game       Game   @relation(fields: [gameId], references: [id])
  seating    Int

  @@id([gameId, name])
  @@unique([gameId, name])
  @@unique([gameId, seating])
	@@map("PlayerGameScore")
}

model Record {
  id     Int    @id @default(autoincrement())
  richii String
  type   String
  info   String
  gameId Int
  game   Game   @relation(fields: [gameId], references: [id])
}
